<!-- ポップアップ部分 -->
<div class="modal-content con01">
	<div class="batu-btn-box">
		<a class="modal-close"><%= image_tag('batu.png', :alt => 'ボタン', :class => 'batu-btn') %></a>
	</div>
	<%= search_form_for @search, :remote => "true" do |f| %>
		<table class="mo-kensaku-table">
			<tr>
				<th colspan="7" class="table-title">検索キーワード</th>
			</tr>
			<tr>
				<th>許可番号</th>
				<td><%= f.text_field :permit_number_cont, :class => "sum-text", :autocomplete => "off" %></td>
				<th>許可名称</th>
				<td colspan="3"><%= f.text_field :permit_name_cont, :class => "inp-text", :autocomplete => "off" %></td>
			</tr>
		</table>
		<%= f.submit "検索する", :class => "con-btn" %>
	<% end %>
	<div id="list_permissions">
        <%= render 'list_permissions' %>
    </div>
    <input type="button" value="登録する" class="modal-close con-btn"  style="text-decoration:none; color:white;">
</div>