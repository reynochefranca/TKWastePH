<div class="modal-content con00">
	<div class="batu-btn-box">
		<a class="modal-close"><%= image_tag('batu.png', :alt => 'ボタン', :class => 'batu-btn') %></a>
	</div>
	<%= search_form_for @search_traders, :remote => "true" do |f| %>
		<table class="mo-kensaku-table">
			<tr>
				<th colspan="7" class="table-title">検索キーワード</th>
			</tr>
			<tr>
				<th>漢字</th>
				<td><%= f.text_field :name_kanji_cont, :class => "sum-text" %></td>
				<th>カナ</th>
				<td colspan="3"><%= f.text_field :name_kana_cont, :class => "inp-text" %></td>
			</tr>
		</table>
		<%= f.submit "検索する", :class => "con-btn" %>
	<% end %>
	<div id="list_traders">
        <%= render 'list_traders' %>
    </div>
    <input type="button" value="登録する" class="modal-close con-btn"  style="text-decoration:none; color:white;">
</div>
