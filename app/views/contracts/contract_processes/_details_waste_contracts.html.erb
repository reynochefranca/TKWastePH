<div class="modal-content con01">
	<div class="batu-btn-box">
		<a class="modal-close"><%= image_tag('batu.png', :alt => 'ボタン', :class => 'batu-btn') %></a>
	</div>
	<table class="mo-kensaku-table">
		<tr>
			<th colspan="16" class="table-title">Details</th>
		</tr>
		<% @contracts.each do |row| %>
    		<tr>
    			<th>場所の名前</th>
    			<td><%= row.place_kanji %></td>
    			
    			<th>会社名</th>
    			<td><%= row.trader_kanji %></td>
    		</tr>
    		<tr>
    			<th>廃棄物種別</th>
    			<td><%= row.wt_name %></td>
    			
    			<th>有害物質名</th>
		    	<td><%= row.hs_name %></td>
    		</tr>
    		<tr>
    			<th>廃棄物種類</th>
    			<td><%= row.ct_name %></td>
    			
    			<th>形状</th>
    		    <td><%= row.sh_name %></td>
    		</tr>
    		<tr>
    			<th>荷姿</th>
    		    <td><%= row.pk_name %></td>
    		    
    		    <th>処分方法</th>
		   		<td><%= row.dm_name %></td>
    		</tr>
    		<tr>
    			<th>プロセス番号</th>
    			<td>
    			    <%= @process_no %>
    			</td>
    			
    			<th>浪費会社</th>
    			<td><span id="waste_cmpny_id1"></span></td>
    		</tr>
    		<tr>
    			<th>分割</th>
    			<td><span id="division_process_id"></span></td>
    		</tr>
		<% end %>
	</table>
    	
	<table class="mo-kensaku-table">
		<tr>
			<th colspan="4" class="table-title"><center>Schedule</center></th>
		</tr>
	</table>
 	<%= form_for @contract_process, url: {controller: "contracts/contract_processes"} do |f| %>
	    <%= f.hidden_field :second_party_id, :id => "waste_cmpny_val" %>
	    <%= f.hidden_field :contract_id, :value => params[:contract_id] %>
	    <%= f.hidden_field :process_seq_id, :value => @process_no %>
	    <%= f.hidden_field :division_process, :id => "division_process_val" %>
	    
		<%= f.submit "Register", :style => "cursor:pointer!important;"  %>
	<% end %>
</div>
<script>
$('#new_contract_process').submit(function() {
    if ($.trim($("#waste_cmpny_val").val()) === "" || $.trim($("#division_process_val").val()) === "") {
        alert('You did not fill out one of the fields');
        return false;
    }
});
</script>
