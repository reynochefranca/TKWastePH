<%= stylesheet_link_tag "master.css" %>
<header>
	<%= render template: 'template/nav' %>
	<h1 class="title">荷姿マスタ画面</h1>
</header>
<div class="container">
	<%= form_for Package.new do |f| %>

		<table class="place-table master-table">
			<thead>
				<tr>
					<th colspan="9" class="table-title">荷姿マスタ</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th>コード</th>
					<th>名称</th>
					<th></th>
				</tr>
				<% if @packages.blank? %>
					<tr>
						<td colspan="3"><center>NO DATA INPUT</center></td>
					</tr>
				<% else 
					@packages.each do |row| %>
				<tr>
					<td><%= row.code %></td>
					<td><%= row.name %></td>
					<td>
						<div class="btn-box cf">
							<ul class="cf">
								<li>
									<%# link_to '編集', 'javascript:void(0)', :class => 'modal-open choicebtn', data: {toggle: "modal", target: "con1", id: row.id, code: row.code, name: row.name} %>
									<a href="javascript:void(0)" onclick="window.open('<%= row.id %>/edit', 'height=10', 'top=auto', 'left=auto');" class="choicebtn">編集</a>
								</li>
								<li><%= link_to '削除', row, method: :delete, :class => 'sakuzyobtn', data: { confirm: 'Are you sure?' } %></li>
							</ul>
						</div>
					</td>
				</tr>
			<% end 
				end %>
			</tbody>
		</table>

		<table class="place-table disposal-table">
			<thead>
				<tr>
					<th class="table-title" colspan="5">新規追加</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th>コード</th>
					<td><%= f.text_field :code, :required => 'required', class: 'inp-text sum-text'%></td>
					<th>名称</th>
					<td><%= f.text_field :name, :required => 'required', class: 'inp-text sum-text'%></td>
					<td class="reg-btn-box"><%= f.submit "登録", class: 'choicebtn' %></td>
				</tr>
			</tbody>
		</table>
		<div class="con-btn-box">
			<input type="submit" class="con-btn" value="確認する">
		</div>
	<% end %>
</div>


<%= render template: 'template/footer' %>

<!-- ポップアップ -->
<div class="modal-content con1">
	<div class="batu-btn-box">
		<a class="modal-close"><%= image_tag('batu.png', :alt => 'ボタン', :class => 'batu-btn') %></a>

	</div>
	<form action="" method="post">
		<table class="place-table disposal-table">
			<thead>
				<tr>
					<th colspan="2" class="table-title">編集</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th>コード</th>
					<td><input type="text" name="" class="inp-text sum-text"></td>
					<th>名称</th>
					<td><input type="text" name="" class="inp-text sum-text"></td>
					<td class="reg-btn-box"><input type="button" name="" value="登録" class="h-btn"></td>
				</tr>
			</tbody>
		</table>
		<input type="submit" value="登録する">
	</form>
</div>

